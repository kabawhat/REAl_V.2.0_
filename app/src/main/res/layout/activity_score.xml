<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.bashirbin.real_v20.ScoreActivity">

    <TextView
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textAllCaps="true"
        android:fontFamily="monospace"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currentScoreText"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/currentScoreText"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:text="scoreBoard" />

    <Button
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/highestSCoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info"

        android:layout_alignStart="@+id/info"
        android:layout_below="@+id/info"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:text="Highest-Score" />

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/updateONline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="update score \n online to compete" />

    <Button
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/currentScoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/highestSCoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_weight="2"
        android:background="@android:color/holo_orange_light"
        android:text="Current-Score" />

    <Button
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/restartgameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_weight="3"
        android:background="@android:color/holo_purple"
        android:text="PLAY -AGAIN " />

</LinearLayout>
